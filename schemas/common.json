      "maxLength": 11,
      "pattern": "^(0[1-9]|[12][0-9]|3[01])(0[1-9]|1[0-2])[0-9][0-9][-+Aa][0-9]{3}[0-9A-FHJ-NPR-Ya-fhj-npr-y]$"
    },
